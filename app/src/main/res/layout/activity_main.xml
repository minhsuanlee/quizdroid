<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <TextView
            android:text="@string/lets_take_a_quiz"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtQuizTitle"
            app:layout_constraintStart_toStartOf="@+id/glineV50"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toStartOf="@+id/glineV50"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/glineV20"
            android:textSize="30sp"
            android:textStyle="bold"/>
    <TextView
            android:text="@string/select_a_topic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtTopics"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="@+id/glineV20"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/glineH30"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:textSize="23sp"/>
    <Button
            android:text="@string/math"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnMath"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="@+id/glineV50"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="@+id/glineH30"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/glineH35"
            app:layout_constraintEnd_toStartOf="@+id/glineV50"/>
    <Button
            android:text="@string/physics"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnPhysics"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="@+id/glineV50"
            app:layout_constraintHorizontal_bias="0.458"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="@+id/glineH40"
            app:layout_constraintEnd_toStartOf="@+id/glineV50"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/glineH50"/>
    <Button
            android:text="@string/marvel_super_heroes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnMarvelHeroes"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/glineH65"
            app:layout_constraintEnd_toStartOf="@+id/glineV50"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="@+id/glineV50"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="@+id/glineH55"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtMath"
            app:layout_constraintBottom_toTopOf="@+id/glineH40"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="@+id/glineV50"
            tools:text="@string/math"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="@+id/glineH35"
            android:layout_marginBottom="8dp"
            app:layout_constraintEnd_toStartOf="@+id/glineV50"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtPhys"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            app:layout_constraintBottom_toTopOf="@+id/glineH55"
            app:layout_constraintStart_toStartOf="@+id/glineV50"
            tools:text="@string/physics"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="@+id/glineH50"
            app:layout_constraintEnd_toStartOf="@+id/glineV50"/>
    <TextView
            android:text="@string/marvel_super_heroes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtMarvel"
            app:layout_constraintBottom_toTopOf="@+id/glineH70"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="@+id/glineV50"
            tools:text="@string/marvel_super_heroes"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="@+id/glineH65"
            app:layout_constraintEnd_toStartOf="@+id/glineV50"/>
    <EditText
            tools:text="@string/url"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtUrl"
            app:layout_constraintEnd_toStartOf="@+id/glineV50"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="@+id/glineV30"
            app:layout_constraintTop_toTopOf="@+id/glineH70"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/glineH75"/>
    <EditText
            tools:text="@string/physics"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtMode"
            app:layout_constraintEnd_toStartOf="@+id/glineV50"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="@+id/glineV30"
            app:layout_constraintTop_toTopOf="@+id/glineH75"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/glineH80"/>
    <Button
            android:text="@string/save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnSave"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="@+id/glineV50"
            android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="@+id/glineV50"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="@+id/glineH80"/>

    <android.support.constraint.Guideline android:layout_width="wrap_content"
                                          android:layout_height="wrap_content"
                                          android:id="@+id/glineH50"
                                          android:orientation="horizontal"
                                          app:layout_constraintGuide_percent=".5"/>
    <android.support.constraint.Guideline android:layout_width="wrap_content"
                                          android:layout_height="wrap_content"
                                          android:id="@+id/glineH65"
                                          android:orientation="horizontal"
                                          app:layout_constraintGuide_percent=".65"/>
    <android.support.constraint.Guideline android:layout_width="wrap_content"
                                          android:layout_height="wrap_content"
                                          android:id="@+id/glineH30"
                                          android:orientation="horizontal"
                                          app:layout_constraintGuide_percent=".3"/>
    <android.support.constraint.Guideline android:layout_width="wrap_content"
                                          android:layout_height="wrap_content"
                                          android:id="@+id/glineH35"
                                          android:orientation="horizontal"
                                          app:layout_constraintGuide_percent=".35"/>
    <android.support.constraint.Guideline android:layout_width="wrap_content"
                                          android:layout_height="wrap_content"
                                          android:id="@+id/glineV10"
                                          android:orientation="vertical"
                                          app:layout_constraintGuide_percent=".1"/>
    <android.support.constraint.Guideline android:layout_width="wrap_content"
                                          android:layout_height="wrap_content"
                                          android:id="@+id/glineV90"
                                          android:orientation="vertical"
                                          app:layout_constraintGuide_percent=".9"/>
    <android.support.constraint.Guideline android:layout_width="wrap_content"
                                          android:layout_height="wrap_content"
                                          android:id="@+id/glineV50"
                                          android:orientation="vertical"
                                          app:layout_constraintGuide_percent="0.5"/>
    <android.support.constraint.Guideline android:layout_width="wrap_content"
                                          android:layout_height="wrap_content"
                                          android:id="@+id/glineV20"
                                          android:orientation="horizontal"
                                          app:layout_constraintGuide_percent=".2"/>
    <android.support.constraint.Guideline android:layout_width="wrap_content"
                                          android:layout_height="wrap_content"
                                          android:id="@+id/glineH40"
                                          app:layout_constraintGuide_percent=".4"
                                          android:orientation="horizontal"/>
    <android.support.constraint.Guideline android:layout_width="wrap_content"
                                          android:layout_height="wrap_content"
                                          android:id="@+id/glineH55"
                                          app:layout_constraintGuide_percent=".55"
                                          android:orientation="horizontal"/>
    <android.support.constraint.Guideline android:layout_width="wrap_content"
                                          android:layout_height="wrap_content"
                                          android:id="@+id/glineH70"
                                          app:layout_constraintGuide_percent=".7"
                                          android:orientation="horizontal"/>
    <android.support.constraint.Guideline android:layout_width="wrap_content"
                                          android:layout_height="wrap_content"
                                          android:id="@+id/glineH75"
                                          app:layout_constraintGuide_percent=".75"
                                          android:orientation="horizontal"/>
    <android.support.constraint.Guideline android:layout_width="wrap_content"
                                          android:layout_height="wrap_content"
                                          android:id="@+id/glineH80"
                                          app:layout_constraintGuide_percent=".8"
                                          android:orientation="horizontal"/>
    <android.support.constraint.Guideline android:layout_width="wrap_content"
                                          android:layout_height="wrap_content"
                                          android:id="@+id/glineV30"
                                          app:layout_constraintGuide_percent=".3"
                                          android:orientation="vertical"/>
</android.support.constraint.ConstraintLayout>