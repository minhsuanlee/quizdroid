<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="30dp"
        tools:context=".AnswerActivity">
    <TextView
            android:text="@string/question_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtAnswerNumber"
            app:layout_constraintStart_toStartOf="@+id/glineV50"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toStartOf="@+id/glineV50"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/glineV20"
            android:textSize="30sp"
            android:textStyle="bold"/>
    <android.support.constraint.Guideline android:layout_width="wrap_content"
                                          android:layout_height="wrap_content"
                                          android:id="@+id/glineV50"
                                          android:orientation="vertical"
                                          app:layout_constraintGuide_percent="0.5"/>
    <android.support.constraint.Guideline android:layout_width="wrap_content"
                                          android:layout_height="wrap_content"
                                          android:id="@+id/glineV20"
                                          android:orientation="horizontal"
                                          app:layout_constraintGuide_percent=".2"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtCorrect"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="@+id/glineV20"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="@+id/glineV10"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:textSize="23sp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/gline35"
            app:layout_constraintEnd_toStartOf="@+id/glineV90" tools:text="Correct Answer"/>
    <android.support.constraint.Guideline android:layout_width="wrap_content"
                                          android:layout_height="wrap_content"
                                          android:id="@+id/glineV10"
                                          android:orientation="vertical"
                                          app:layout_constraintGuide_percent=".1"/>
    <android.support.constraint.Guideline android:layout_width="wrap_content"
                                          android:layout_height="wrap_content"
                                          android:id="@+id/glineV90"
                                          android:orientation="vertical"
                                          app:layout_constraintGuide_percent=".9"/>
    <android.support.constraint.Guideline android:layout_width="wrap_content"
                                          android:layout_height="wrap_content"
                                          android:id="@+id/glineH60"
                                          android:orientation="horizontal"
                                          app:layout_constraintGuide_percent=".5"/>

    <android.support.constraint.Guideline android:layout_width="wrap_content"
                                          android:layout_height="wrap_content"
                                          android:id="@+id/glineH95"
                                          android:orientation="horizontal"
                                          app:layout_constraintGuide_percent=".95"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnNext"
            app:layout_constraintEnd_toStartOf="@+id/glineV50"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="@+id/glineV50"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/glineH95"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="@+id/glineH60"
            tools:text="Next"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtUserAnswer"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="@+id/gline35"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/glineH60"
            app:layout_constraintStart_toStartOf="@+id/glineV50"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toStartOf="@+id/glineV50"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:textSize="23sp"
            tools:text="User Answer"/>
    <android.support.constraint.Guideline android:layout_width="wrap_content"
                                          android:layout_height="wrap_content"
                                          android:id="@+id/gline35"
                                          android:orientation="horizontal"
                                          app:layout_constraintGuide_percent=".35"/>


</android.support.constraint.ConstraintLayout>